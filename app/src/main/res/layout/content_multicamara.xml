<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.alberto.tesisjunta.MulticamaraActivity"
    tools:showIn="@layout/app_bar_multicamara"
    android:weightSum="9.9"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="2.5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        >

        <VideoView
            android:id="@+id/video11"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.25" />

        <VideoView
            android:id="@+id/video22"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.25" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:orientation="horizontal">

        <VideoView
            android:id="@+id/video33"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.25" />

        <VideoView
            android:id="@+id/video44"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.25" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="horizontal">

        <VideoView
            android:id="@+id/video55"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/Publicidad"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:background="#000000"
        android:orientation="horizontal">

    </LinearLayout>

</LinearLayout>
